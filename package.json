    "eslint": "^8.56.0",
    "homebridge": "^1.7.0",
    "nodemon": "^3.0.3",
    "npm-check-updates": "^16.14.14",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-axios-wb": "^1.0.3"
  }
}
